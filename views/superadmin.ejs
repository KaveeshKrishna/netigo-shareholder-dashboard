<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Netigo Admin Control</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
    <link href="https://cdn.jsdelivr.net/npm/gridstack@10.0.1/dist/gridstack.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/gridstack@10.0.1/dist/gridstack-all.js"></script>
</head>

<body class="dashboard-body">

    <nav class="sidebar" id="sidebar">
        <div class="sidebar-logo">
            <img src="/netigo-logo.png" alt="Netigo Logo" style="width: 40px; height: 40px; object-fit: contain;">
            <h2>Netigo</h2>
            <button class="hamburger-btn close-sidebar"
                onclick="document.getElementById('sidebar').classList.remove('active')">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </button>
        </div>
        <div class="sidebar-menu">
            <a href="/" class="menu-item">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                    <polyline points="9 22 9 12 15 12 15 22"></polyline>
                </svg>
                Dashboard
            </a>

            <a href="/admin" class="menu-item active">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                </svg>
                Admin Panel
            </a>

            <a href="/logout" class="menu-item logout-btn" style="margin-top: auto;">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                    <polyline points="16 17 21 12 16 7"></polyline>
                    <line x1="21" y1="12" x2="9" y2="12"></line>
                </svg>
                Logout
            </a>
        </div>
    </nav>

    <main class="main-content">
        <header class="topbar">
            <div class="topbar-header">
                <button class="hamburger-btn" onclick="document.getElementById('sidebar').classList.add('active')">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="3" y1="12" x2="21" y2="12"></line>
                        <line x1="3" y1="6" x2="21" y2="6"></line>
                        <line x1="3" y1="18" x2="21" y2="18"></line>
                    </svg>
                </button>
                <div class="greeting">
                    <h1>Superadmin Control</h1>
                    <p>Exclusive access for <span class="highlight">
                            <%= user.username %>
                        </span></p>
                </div>
            </div>
            <div class="topbar-actions">
                <button class="btn-primary" onclick="document.getElementById('addUserModal').classList.add('active')">
                    + Add User
                </button>
            </div>
        </header>

        <div style="display: flex; justify-content: flex-end; margin-bottom: 10px; gap: 10px;" id="layoutControls">
            <button class="btn-secondary" id="editLayoutBtn" onclick="toggleEditLayout()"
                style="background: var(--bg-secondary); border: 1px dashed var(--border-color); color: var(--text-main); font-size: 14px;">Edit
                Dashboard Layout</button>
            <button class="btn-primary" id="saveLayoutBtn" onclick="toggleEditLayout()"
                style="display: none; background: #22c55e; color: #fff; font-size: 14px;">Save Layout</button>
            <button class="btn-secondary" id="resetLayoutBtn" onclick="resetGrid()"
                style="display: none; background: rgba(239, 68, 68, 0.1); border: 1px solid var(--color-expense); color: var(--color-expense); font-size: 14px;">Reset
                Defaults</button>
        </div>

        <section class="grid-stack" id="superadmin-grid">
            <div class="grid-stack-item" gs-x="0" gs-y="0" gs-w="12" gs-h="4">
                <div class="grid-stack-item-content">
                    <div class="card recent-card" style="height: 100%; display: flex; flex-direction: column;">
                        <div class="card-header">
                            <h3>User Management</h3>
                        </div>
                        <div class="table-container" style="flex: 1;">
                            <table class="data-table">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Username</th>
                                        <th>Role</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% usersList.forEach(u=> { %>
                                        <tr>
                                            <td>#<%= u.id %>
                                            </td>
                                            <td><strong>
                                                    <%= u.username %>
                                                </strong></td>
                                            <td>
                                                <span
                                                    class="badge badge-<%= u.role === 'superadmin' ? 'investment' : 'income' %>">
                                                    <%= u.role %>
                                                </span>
                                            </td>
                                            <td>
                                                <div style="display:flex; gap:10px;">
                                                    <button class="btn-primary"
                                                        style="padding: 6px 12px; font-size: 12px;"
                                                        onclick="openPasswordModal('<%= u.id %>', '<%= u.username %>')">Change
                                                        Password</button>
                                                    <% if (u.id !==user.id) { %>
                                                        <button class="btn-icon-danger"
                                                            onclick="deleteUser('<%= u.id %>')">
                                                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none"
                                                                stroke="currentColor" stroke-width="2">
                                                                <polyline points="3 6 5 6 21 6"></polyline>
                                                                <path
                                                                    d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2">
                                                                </path>
                                                            </svg>
                                                        </button>
                                                        <% } %>
                                                </div>
                                            </td>
                                        </tr>
                                        <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Audit Management Section -->
            <% if (pendingDeletions> 0) { %>
                <div class="grid-stack-item" gs-x="0" gs-y="4" gs-w="12" gs-h="2">
                    <div class="grid-stack-item-content">
                        <div class="card"
                            style="height: 100%; display: flex; flex-direction: column; background: rgba(239, 68, 68, 0.1); border-left: 4px solid var(--color-expense); margin-bottom: 20px;">
                            <div style="flex: 1; display: flex; justify-content: space-between; align-items: center;">
                                <div>
                                    <h4 style="color: var(--color-expense); margin-bottom: 5px;">Action Required: Old
                                        Logs
                                        Detected</h4>
                                    <p style="font-size: 14px; margin: 0;">There are <strong>
                                            <%= pendingDeletions %>
                                        </strong> audit logs older than 30 days consuming database space.</p>
                                </div>
                                <button class="btn-primary" style="background: var(--color-expense);"
                                    onclick="deleteOldLogs()">Clear Old Logs</button>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>

                    <div class="grid-stack-item" gs-x="0"
                        gs-y="<% if (pendingDeletions > 0) { %>6<% } else { %>4<% } %>" gs-w="12" gs-h="6">
                        <div class="grid-stack-item-content">
                            <div class="card recent-card" style="height: 100%; display: flex; flex-direction: column;">
                                <div class="card-header"
                                    style="display: flex; justify-content: space-between; align-items: center;">
                                    <h3>Audit Trail Management</h3>
                                    <div style="display:flex; gap:10px;">
                                        <a href="/api/audit/export" class="btn-primary"
                                            style="background: var(--color-investment); text-decoration: none; padding: 6px 12px; font-size: 13px;">Export
                                            CSV</a>
                                        <button class="btn-primary"
                                            style="background: var(--color-expense); padding: 6px 12px; font-size: 13px;"
                                            onclick="deleteAllLogs()">Nuke All Logs</button>
                                    </div>
                                </div>
                                <div class="table-container" style="flex: 1;">
                                    <table class="data-table">
                                        <thead>
                                            <tr>
                                                <th>Date & Time</th>
                                                <th>Action</th>
                                                <th>Details</th>
                                                <th>User</th>
                                                <th>Manage</th>
                                            </tr>
                                        </thead>
                                        <tbody id="auditTableBody">
                                            <% auditLogs.forEach(log=> { %>
                                                <tr>
                                                    <td>
                                                        <%= new Date(log.created_at).toLocaleString() %>
                                                    </td>
                                                    <td>
                                                        <span
                                                            class="badge badge-<%= log.action === 'INSERT' ? 'investment' : 'expense' %>">
                                                            <%= log.action %>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <%= log.details %>
                                                    </td>
                                                    <td><strong>
                                                            <%= log.performed_by %>
                                                        </strong></td>
                                                    <td>
                                                        <button class="btn-icon-danger"
                                                            onclick="deleteSingleLog('<%= log.id %>')">
                                                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none"
                                                                stroke="currentColor" stroke-width="2">
                                                                <polyline points="3 6 5 6 21 6"></polyline>
                                                                <path
                                                                    d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2">
                                                                </path>
                                                            </svg>
                                                        </button>
                                                    </td>
                                                </tr>
                                                <% }); %>
                                                    <% if (auditLogs.length===0) { %>
                                                        <tr>
                                                            <td colspan="5"
                                                                style="text-align: center; color: var(--text-muted);">No
                                                                audit
                                                                logs available.</td>
                                                        </tr>
                                                        <% } %>
                                        </tbody>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="pagination-controls"
                                    style="display: flex; justify-content: space-between; align-items: center; padding: 15px; border-top: 1px solid var(--border-color);">
                                    <button id="prevAuditBtn" class="btn-secondary" onclick="changeAuditPage(-1)"
                                        disabled>Previous</button>
                                    <span id="auditPageInfo" style="font-size: 14px; font-weight: 500;">Page 1</span>
                                    <button id="nextAuditBtn" class="btn-secondary"
                                        onclick="changeAuditPage(1)">Next</button>
                                </div>
                            </div>
        </section>
    </main>

    <!-- Confirm Deletion Modal -->
    <div class="modal-overlay" id="deleteConfirmModal">
        <div class="modal card">
            <div class="modal-header">
                <h3>Confirm Deletion</h3>
                <button class="close-modal"
                    onclick="document.getElementById('deleteConfirmModal').classList.remove('active')">✕</button>
            </div>
            <form id="deleteConfirmForm" onsubmit="confirmDelete(event)">
                <p style="font-size:14px; margin-bottom:15px; color:var(--text-muted);" id="deleteConfirmWarning">This
                    action cannot be undone.</p>
                <div class="input-group">
                    <label>Please type "DELETE" to confirm</label>
                    <input name="confirm_text" id="delConfirmText" type="text" placeholder="DELETE" required
                        autocomplete="off">
                </div>
                <button type="submit" class="btn-primary w-100" style="background: var(--color-expense);">Delete
                    Permanently</button>
            </form>
        </div>
    </div>

    <!-- Change Password Modal -->
    <div class="modal-overlay" id="passwordModal">
        <div class="modal card">
            <div class="modal-header">
                <h3 id="pwdModalTitle">Change Password</h3>
                <button class="close-modal"
                    onclick="document.getElementById('passwordModal').classList.remove('active')">✕</button>
            </div>
            <form id="passwordForm" onsubmit="changePassword(event)">
                <input type="hidden" id="pwdUserId">
                <div class="input-group">
                    <label>New Password</label>
                    <input name="newPassword" id="newPassword" type="text" required>
                </div>
                <button type="submit" class="btn-primary w-100">Update Password</button>
            </form>
        </div>
    </div>

    <!-- Add User Modal -->
    <div class="modal-overlay" id="addUserModal">
        <div class="modal card">
            <div class="modal-header">
                <h3>Add New User</h3>
                <button class="close-modal"
                    onclick="document.getElementById('addUserModal').classList.remove('active')">✕</button>
            </div>
            <form id="addUserForm" onsubmit="addUser(event)">
                <div class="input-group">
                    <label>Username (Email format preferred)</label>
                    <input name="username" id="newUsername" type="text" required>
                </div>
                <div class="input-group">
                    <label>Role</label>
                    <select name="role" id="newRole">
                        <option value="admin">Admin</option>
                        <option value="superadmin">Superadmin</option>
                    </select>
                </div>
                <div class="input-group">
                    <label>Temporary Password</label>
                    <input name="password" id="newUserPwd" type="text" required>
                </div>
                <button type="submit" class="btn-primary w-100">Create Account</button>
            </form>
        </div>
    </div>

    <script>
        function openPasswordModal(id, username) {
            document.getElementById('pwdUserId').value = id;
            document.getElementById('pwdModalTitle').innerText = 'Change Password for ' + username;
            document.getElementById('newPassword').value = '';
            document.getElementById('passwordModal').classList.add('active');
        }

        async function changePassword(e) {
            e.preventDefault();
            const id = document.getElementById('pwdUserId').value;
            const newPassword = document.getElementById('newPassword').value;

            const res = await fetch("/api/admin/change-password/" + id, {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ newPassword })
            });

            if (res.ok) {
                alert("Password updated successfully.");
                window.location.reload();
            } else {
                alert("Failed to update password.");
            }
        }

        async function addUser(e) {
            e.preventDefault();
            const username = document.getElementById('newUsername').value;
            const password = document.getElementById('newUserPwd').value;
            const role = document.getElementById('newRole').value;

            const res = await fetch("/api/admin/add-user", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ username, password, role })
            });

            if (res.ok) {
                window.location.reload();
            } else {
                alert("Failed to add user. Username might already exist.");
            }
        }

        function deleteUser(id) {
            openDeleteModal("/api/admin/delete-user/" + id, "WARNING: You are about to permanently delete this user account.");
        }

        // --- PASSWORD PROTECTED DELETE LOGIC ---
        let pendingDeleteUrl = "";

        function openDeleteModal(url, warningText) {
            pendingDeleteUrl = url;
            document.getElementById('deleteConfirmWarning').innerText = warningText;
            document.getElementById('delConfirmText').value = '';
            document.getElementById('deleteConfirmModal').classList.add('active');
        }

        async function confirmDelete(e) {
            e.preventDefault();
            const confirmText = document.getElementById('delConfirmText').value;

            if (confirmText !== 'DELETE') {
                return alert("You must type exactly 'DELETE' to confirm this action.");
            }

            const res = await fetch(pendingDeleteUrl, {
                method: "DELETE",
                headers: { "Content-Type": "application/json" }
            });

            if (res.ok) {
                window.location.reload();
            } else {
                const data = await res.json();
                alert(data.error || "Failed to delete.");
            }
        }

        function deleteOldLogs() {
            openDeleteModal("/api/superadmin/audit/old", "You are about to delete all audit logs older than 30 days.");
        }

        function deleteAllLogs() {
            openDeleteModal("/api/superadmin/audit/all", "WARNING: This will permanently delete ALL audit logs.");
        }

        function deleteSingleLog(id) {
            openDeleteModal(`/api/superadmin/audit/${id}`, "You are about to delete this specific audit log.");
        }

        // --- PAGINATION LOGIC ---
        let currentAuditPage = 1;
        const auditRowsPerPage = 10;

        function displayAuditPage(page) {
            const tableBody = document.getElementById("auditTableBody");
            if (!tableBody) return;
            const rows = tableBody.getElementsByTagName("tr");
            const totalRows = rows.length;

            if (totalRows === 1 && rows[0].innerText.includes("No audit logs")) return;

            const totalPages = Math.ceil(totalRows / auditRowsPerPage) || 1;
            if (page < 1) page = 1;
            if (page > totalPages) page = totalPages;
            currentAuditPage = page;

            for (let i = 0; i < totalRows; i++) {
                if (i >= (page - 1) * auditRowsPerPage && i < page * auditRowsPerPage) {
                    rows[i].style.display = "";
                } else {
                    rows[i].style.display = "none";
                }
            }

            document.getElementById("auditPageInfo").innerText = `Page ${currentAuditPage} of ${totalPages}`;
            document.getElementById("prevAuditBtn").disabled = currentAuditPage === 1;
            document.getElementById("nextAuditBtn").disabled = currentAuditPage === totalPages;
        }

        function changeAuditPage(direction) {
            displayAuditPage(currentAuditPage + direction);
        }

        document.addEventListener("DOMContentLoaded", () => {
            displayAuditPage(1);

            // --- GridStack Layout Management ---
            grid = GridStack.init({
                staticGrid: true, // locked by default
                margin: 15,
                cellHeight: 100,
                animate: true
            });

            // Load saved layout if available
            const savedLayout = localStorage.getItem("netigoSuperadminGrid");
            if (savedLayout) {
                grid.load(JSON.parse(savedLayout));
            }

            // Auto-save on any resize or drag
            grid.on('change', function (event, items) {
                if (!grid.opts.staticGrid) {
                    saveGrid();
                }
            });
        });

        let grid;
        function saveGrid() {
            const layout = grid.save();
            localStorage.setItem("netigoSuperadminGrid", JSON.stringify(layout));
        }

        let isEditingLayout = false;
        function toggleEditLayout() {
            isEditingLayout = !isEditingLayout;
            grid.setStatic(!isEditingLayout); // Unlock or lock grid

            const editBtn = document.getElementById('editLayoutBtn');
            const saveBtn = document.getElementById('saveLayoutBtn');
            const resetBtn = document.getElementById('resetLayoutBtn');

            if (isEditingLayout) {
                editBtn.style.display = 'none';
                saveBtn.style.display = 'inline-block';
                resetBtn.style.display = 'inline-block';

                document.getElementById('superadmin-grid').style.backgroundColor = 'rgba(255,255,255,0.02)';
                document.getElementById('superadmin-grid').style.border = '1px dashed rgba(255,255,255,0.1)';
                document.getElementById('superadmin-grid').style.borderRadius = '12px';
            } else {
                editBtn.style.display = 'inline-block';
                saveBtn.style.display = 'none';
                resetBtn.style.display = 'none';
                document.getElementById('superadmin-grid').style.backgroundColor = 'transparent';
                document.getElementById('superadmin-grid').style.border = 'none';
            }
        }

        function resetGrid() {
            if (confirm("Are you sure you want to reset the layout to factory defaults?")) {
                localStorage.removeItem("netigoSuperadminGrid");
                window.location.reload();
            }
        }
    </script>

</body>

</html>