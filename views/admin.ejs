<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Netigo Admin Profile</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
</head>

<body class="dashboard-body">

    <nav class="sidebar" id="sidebar">
        <div class="sidebar-logo">
            <img src="/netigo-logo.png" alt="Netigo Logo" style="width: 40px; height: 40px; object-fit: contain;">
            <h2>Netigo</h2>
            <button class="hamburger-btn close-sidebar"
                onclick="document.getElementById('sidebar').classList.remove('active')">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </button>
        </div>
        <div class="sidebar-menu">
            <a href="/" class="menu-item">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                    <polyline points="9 22 9 12 15 12 15 22"></polyline>
                </svg>
                Dashboard
            </a>

            <a href="/admin" class="menu-item active">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                </svg>
                Admin Panel
            </a>

            <% if (user.role==='superadmin' ) { %>
                <a href="/superadmin" class="menu-item">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                    </svg>
                    Superadmin
                </a>
                <% } %>

                    <a href="/logout" class="menu-item logout-btn" style="margin-top: auto;">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="2">
                            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                            <polyline points="16 17 21 12 16 7"></polyline>
                            <line x1="21" y1="12" x2="9" y2="12"></line>
                        </svg>
                        Logout
                    </a>
        </div>
    </nav>

    <main class="main-content">
        <header class="topbar">
            <div class="topbar-header">
                <button class="hamburger-btn" onclick="document.getElementById('sidebar').classList.add('active')">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="3" y1="12" x2="21" y2="12"></line>
                        <line x1="3" y1="6" x2="21" y2="6"></line>
                        <line x1="3" y1="18" x2="21" y2="18"></line>
                    </svg>
                </button>
                <div class="greeting">
                    <h1>Admin Profile</h1>
                    <p>Welcome, <span class="highlight">
                            <%= user.username %>
                        </span></p>
                </div>
            </div>
            <div class="topbar-actions">
                <button class="btn-primary" onclick="document.getElementById('passwordModal').classList.add('active')">
                    Change My Password
                </button>
            </div>
        </header>

        <section class="content-grid" style="grid-template-columns: 1fr;">
            <!-- Audit Logs Section -->
            <div class="card recent-card">
                <div class="card-header" style="display: flex; justify-content: space-between; align-items: center;">
                    <h3>Audit Trail (30 Days)</h3>
                    <a href="/api/audit/export" class="btn-primary"
                        style="background: var(--color-investment); text-decoration: none; padding: 6px 12px; font-size: 13px;">
                        Export CSV
                    </a>
                </div>
                <div class="table-container">
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Date & Time</th>
                                <th>Action</th>
                                <th>Details</th>
                                <th>User</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% auditLogs.forEach(log=> { %>
                                <tr>
                                    <td>
                                        <%= new Date(log.created_at).toLocaleString() %>
                                    </td>
                                    <td>
                                        <span
                                            class="badge badge-<%= log.action === 'INSERT' ? 'investment' : 'expense' %>">
                                            <%= log.action %>
                                        </span>
                                    </td>
                                    <td>
                                        <%= log.details %>
                                    </td>
                                    <td><strong>
                                            <%= log.performed_by %>
                                        </strong></td>
                                </tr>
                                <% }); %>
                                    <% if (auditLogs.length===0) { %>
                                        <tr>
                                            <td colspan="4" style="text-align: center; color: var(--text-muted);">No
                                                audit logs available.</td>
                                        </tr>
                                        <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
    </main>

    <!-- Change Password Modal -->
    <div class="modal-overlay" id="passwordModal">
        <div class="modal card">
            <div class="modal-header">
                <h3>Change My Password</h3>
                <button class="close-modal"
                    onclick="document.getElementById('passwordModal').classList.remove('active')">âœ•</button>
            </div>
            <form id="passwordForm" onsubmit="changeMyPassword(event)">
                <div class="input-group">
                    <label>New Password</label>
                    <input name="newPassword" id="newPassword" type="password" required>
                </div>
                <button type="submit" class="btn-primary w-100">Update Password</button>
            </form>
        </div>
    </div>

    <script>
        async function changeMyPassword(e) {
            e.preventDefault();
            const newPassword = document.getElementById('newPassword').value;

            const res = await fetch("/api/change-password", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ newPassword })
            });

            if (res.ok) {
                alert("Password updated successfully.");
                document.getElementById('passwordModal').classList.remove('active');
                document.getElementById('passwordForm').reset();
            } else {
                alert("Failed to update password.");
            }
        }
    </script>
</body>

</html>