<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Netigo Dashboard</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
  <style type="text/tailwindcss">
    @layer utilities {
      .min-w-0 { min-width: 0; }
    }
  </style>
  <link rel="stylesheet" href="/style.css">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body class="dashboard-body max-md:!flex-col max-md:!pb-[70px]">

  <nav class="sidebar max-md:!w-full max-md:!h-auto max-md:!relative max-md:!p-[15px_20px] max-md:!border-r-0 max-md:!border-b max-md:!border-b-[var(--border-light)] max-md:!flex max-md:!flex-row max-md:!justify-between max-md:!items-center max-md:!bg-transparent max-md:!z-10">
    <div class="sidebar-logo max-md:!m-0 max-md:!p-0">
      <img src="/netigo-logo.png" alt="Netigo Logo" style="width: 40px; height: 40px; object-fit: contain;">
      <h2 class="max-md:hidden">Netigo</h2>
    </div>
    <div class="sidebar-menu max-md:!fixed max-md:!bottom-0 max-md:!left-0 max-md:!w-full max-md:!h-[70px] max-md:!bg-[var(--bg-card)] max-md:!backdrop-blur-[20px] max-md:!border-t max-md:!border-[var(--border-light)] max-md:!flex max-md:!flex-row max-md:!p-0 max-md:!m-0 max-md:!z-[1000]">
      <a href="/" class="menu-item active max-md:!flex max-md:!flex-col max-md:!justify-center max-md:!rounded-none max-md:!p-[5px] max-md:!text-[10px] max-md:!gap-[4px] max-md:!m-0 max-md:!border-none max-md:!bg-transparent max-md:!shadow-[inset_0_3px_0_var(--primary)] max-md:text-[var(--primary)]">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
          <polyline points="9 22 9 12 15 12 15 22"></polyline>
        </svg>
        <span class="max-md:block">Dashboard</span>
      </a>

      <% if (user.role==='superadmin' ) { %>
        <a href="/admin" class="menu-item max-md:!flex max-md:!flex-col max-md:!justify-center max-md:!rounded-none max-md:!p-[5px] max-md:!text-[10px] max-md:!gap-[4px] max-md:!m-0 max-md:!border-none">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
          </svg>
          <span class="max-md:block">Admin</span>
        </a>
        <% } %>

          <div class="online-section max-md:!absolute max-md:!top-[10px] max-md:!right-[20px] max-md:!w-auto max-md:!m-0 max-md:!p-[5px_10px] max-md:!border-none max-md:!bg-transparent">
            <p class="section-title max-md:!hidden">Live Tracking</p>
            <div id="online-users-list" class="max-md:!flex max-md:!gap-[10px]">
              <!-- Injected via JS -->
            </div>
          </div>

          <a href="/logout" class="menu-item logout-btn max-md:!flex max-md:!flex-col max-md:!justify-center max-md:!rounded-none max-md:!p-[5px] max-md:!text-[10px] max-md:!gap-[4px] max-md:!m-0 max-md:!mt-0 max-md:!border-none">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
              <polyline points="16 17 21 12 16 7"></polyline>
              <line x1="21" y1="12" x2="9" y2="12"></line>
            </svg>
            <span class="max-md:block">Logout</span>
          </a>
    </div>
  </nav>

  <main class="main-content min-w-0 max-md:!ml-0 max-md:!p-[20px_15px]">
    <header class="topbar max-md:!flex-col max-md:!items-start max-md:!gap-[15px]">
      <div class="greeting">
        <h1 class="max-md:!text-2xl">Overview</h1>
        <p class="max-md:!text-sm">Welcome back, <span class="highlight">
            <%= user.username %>
          </span></p>
      </div>
      <div class="topbar-actions max-md:!w-full max-md:!flex-col sm:max-md:!flex-row max-md:!gap-[10px]">
        <a href="/api/export" class="btn-primary max-md:!w-full max-md:!flex-1 max-md:!justify-center max-md:!text-[14px]" style="background: var(--color-investment); text-decoration: none;">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
            <polyline points="7 10 12 15 17 10"></polyline>
            <line x1="12" y1="15" x2="12" y2="3"></line>
          </svg>
          Export CSV
        </a>
        <button class="btn-primary max-md:!w-full max-md:!flex-1 max-md:!justify-center max-md:!text-[14px]" id="openModalBtn">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="12" y1="5" x2="12" y2="19"></line>
            <line x1="5" y1="12" x2="19" y2="12"></line>
          </svg>
          New Transaction
        </button>
      </div>
    </header>

    <section class="stats-grid max-md:!grid-cols-2 max-sm:!grid-cols-1 max-md:!gap-[15px]">
      <div class="stat-card balance-card max-md:!flex-col max-md:!items-start max-md:!p-[15px] max-md:!gap-[10px]">
        <div class="stat-icon max-md:!w-[40px] max-md:!h-[40px] max-md:!text-[20px]">₹</div>
        <div class="stat-info">
          <p class="max-md:!text-[12px]">Total Balance</p>
          <h3 id="balance" class="max-md:!text-[20px]">₹0.00</h3>
        </div>
      </div>
      <div class="stat-card investment-card max-md:!flex-col max-md:!items-start max-md:!p-[15px] max-md:!gap-[10px]">
        <div class="stat-icon max-md:!w-[40px] max-md:!h-[40px] max-md:!text-[20px]">↑</div>
        <div class="stat-info">
          <p class="max-md:!text-[12px]">Total Investments</p>
          <h3 id="investment" class="max-md:!text-[20px]">₹0.00</h3>
        </div>
      </div>
      <div class="stat-card income-card max-md:!flex-col max-md:!items-start max-md:!p-[15px] max-md:!gap-[10px]">
        <div class="stat-icon max-md:!w-[40px] max-md:!h-[40px] max-md:!text-[20px]">+</div>
        <div class="stat-info">
          <p class="max-md:!text-[12px]">Total Earnings</p>
          <h3 id="income" class="max-md:!text-[20px]">₹0.00</h3>
        </div>
      </div>
      <div class="stat-card expense-card max-md:!flex-col max-md:!items-start max-md:!p-[15px] max-md:!gap-[10px]">
        <div class="stat-icon max-md:!w-[40px] max-md:!h-[40px] max-md:!text-[20px]">-</div>
        <div class="stat-info">
          <p class="max-md:!text-[12px]">Total Expenses</p>
          <h3 id="expense" class="max-md:!text-[20px]">₹0.00</h3>
        </div>
      </div>
    </section>

    <!-- Adding min-w-0 to grid children fixes the ChartJS canvas expanding infinitely bug -->
    <section class="content-grid max-md:!grid-cols-1 w-full">
      <div class="card chart-card min-w-0">
        <h3 class="max-md:!text-[18px]">Financial Analytics</h3>
        <div class="chart-container relative w-full h-[300px] max-md:!h-[250px]">
          <canvas id="chart"></canvas>
        </div>
      </div>

      <div class="card recent-card min-w-0">
        <div class="card-header">
          <h3 class="max-md:!text-[18px]">Recent Transactions</h3>
        </div>
        <div class="table-container max-md:overflow-x-auto w-full">
          <table class="data-table w-full">
            <thead>
              <tr>
                <th class="max-md:!p-[12px_10px] max-md:!text-[13px] max-md:whitespace-nowrap">Type</th>
                <th class="max-md:!p-[12px_10px] max-md:!text-[13px] max-md:whitespace-nowrap">Category</th>
                <th class="max-md:!p-[12px_10px] max-md:!text-[13px] max-md:whitespace-nowrap">Amount</th>
                <th class="max-md:!p-[12px_10px] max-md:!text-[13px] max-md:whitespace-nowrap">Date</th>
                <th class="max-md:!p-[12px_10px] max-md:!text-[13px] max-md:whitespace-nowrap">Actions</th>
              </tr>
            </thead>
            <tbody id="table">
              <!-- Injected via JS -->
            </tbody>
          </table>
        </div>
      </div>
    </section>
  </main>

  <!-- Add Transaction Modal -->
  <div class="modal-overlay" id="transactionModal">
    <div class="modal card">
      <div class="modal-header">
        <h3>Add Transaction</h3>
        <button class="close-modal" id="closeModalBtn">✕</button>
      </div>
      <form id="addForm">
        <div class="input-group">
          <label>Transaction Type</label>
          <select name="type" required>
            <option value="investment">Investment (Capital In)</option>
            <option value="income">Earnings (Revenue)</option>
            <option value="expense">Expense (Outflow)</option>
          </select>
        </div>
        <div class="input-group">
          <label>Category / Source</label>
          <div style="display: flex; gap: 10px;">
            <select name="category" id="categorySelect" required style="flex:1;">
              <!-- Injected via JS -->
            </select>
            <button type="button" class="btn-primary" id="newCategoryBtn" style="width: auto;">+</button>
          </div>
        </div>
        <div class="input-group">
          <label>Amount (₹)</label>
          <input name="amount" type="number" step="0.01" placeholder="0.00" required>
        </div>
        <div class="input-group">
          <label>Note (Optional)</label>
          <input name="note" placeholder="Add details...">
        </div>
        <button type="submit" class="btn-primary w-100">Save Record</button>
      </form>
    </div>
  </div>

  <!-- Delete Verification Modal -->
  <div class="modal-overlay" id="deleteModal">
    <div class="modal card">
      <div class="modal-header">
        <h3 style="color: var(--color-expense);">Secure Deletion</h3>
        <button class="close-modal" onclick="closeDeleteModal()">✕</button>
      </div>
      <form id="deleteForm">
        <p style="color: var(--text-muted); margin-bottom: 20px; font-size: 14px;">Please enter your password to
          authorize this deletion.</p>
        <input type="hidden" id="deleteId">
        <div class="input-group">
          <label>Password</label>
          <input name="password" type="password" required>
        </div>
        <button type="submit" class="btn-primary w-100" style="background: var(--color-expense);">Delete Record</button>
      </form>
    </div>
  </div>

  <script src="/dashboard.js"></script>
</body>

</html>